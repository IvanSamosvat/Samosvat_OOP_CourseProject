<Window x:Class="OOP_CourseProject_Fitness.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_CourseProject_Fitness"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="UsernameTextBox" Margin="300,45,248,346" RenderTransformOrigin="0.481,0.494" />
        <PasswordBox Name="PasswordBox" Margin="300,142,248,250" RenderTransformOrigin="0.489,-0.113" />
        <ComboBox Name="RoleComboBox" Margin="300,230,248,155">
            <ComboBoxItem Content="Administrator"/>
            <ComboBoxItem Content="Trainer"/>
            <ComboBoxItem Content="Client"/>
        </ComboBox>
        <Button Content="Авторизація" Margin="300,300,248,96" Click="LoginButton_Click"/>
        <Button Content="Реєстрація" Margin="300,358,248,28" Click="RegisterButton_Click"/>
        <Label Content="Логін" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.481,0.448"/>
        <Label Content="Роль" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" RenderTransformOrigin="0.481,0.448"/>

    </Grid>
</Window>
