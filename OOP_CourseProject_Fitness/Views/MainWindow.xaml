<Window x:Class="OOP_CourseProject_Fitness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_CourseProject_Fitness"
        mc:Ignorable="d"
        Title="Fitness Club Management" Height="450" Width="800">

    <Window.Resources>
        <!-- Регистрируем конвертер -->
        <local:RoleVisibilityConverter x:Key="RoleVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Клієнти">
                <StackPanel>
                    <Button Content="Додати клієнта" Click="AddClient_Click"/>
                    <!-- Используем DataGrid для отображения клиентов -->
                    <DataGrid Name="ClientsDataGrid" SelectionChanged="ClientsDataGrid_SelectionChanged" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                            <DataGridTextColumn Header="Contact Info" Binding="{Binding ContactInfo}" Width="*" />
                            <DataGridTextColumn Header="Medical Details" Binding="{Binding MedicalDetails}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                   
                    <Button Content="Оновити інформацію" Click="RefeshClient_Click" IsEnabled="True" Name="RefreshClientButton"/>
                    <Button Content="Редагувати клієнта" Click="EditClient_Click" IsEnabled="False" Name="EditClientButton"/>
                    <Button Content="Видалити клієнта" Click="DeleteClient_Click" IsEnabled="False" Name="DeleteClientButton"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Абонименти">
                <StackPanel>
                    <Button Content="Додати абонимент" Click="AddMembership_Click"/>
                    <ListBox Name="MembershipsList"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Оплата">
                <StackPanel>
                    <Button Content="Додати оплату" Click="AddPayment_Click"/>
                    <ListBox Name="PaymentsList"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
