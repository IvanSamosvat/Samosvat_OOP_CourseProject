<Window x:Class="OOP_CourseProject_Fitness.AddPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_CourseProject_Fitness"
        mc:Ignorable="d"
        Title="AddPaymentWindow" Height="450" Width="800">
    <Grid>
       
            <StackPanel>
                <TextBlock Text="Сума платежу" Margin="10"/>
                <TextBox Name="AmountTextBox" Margin="10"/>

                <TextBlock Text="Дата платежу" Margin="10"/>
                <DatePicker Name="PaymentDatePicker" Margin="10"/>

                <Button Content="Зберегти платіж" Click="SavePayment_Click" Margin="10"/>
            </StackPanel>
        </Grid>
   
</Window>
