<Window x:Class="OOP_CourseProject_Fitness.AddMembershipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_CourseProject_Fitness"
        mc:Ignorable="d"
        Title="AddMembershipWindow" Height="450" Width="800">
    <Grid>
        <!-- Контейнер для типа абонемента -->
        <Grid Margin="10,10,10,10">
            <TextBox Name="MembershipTypeTextBox" Width="200" Height="30" Margin="249,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock Text="Тип абонемента" VerticalAlignment="Top" Margin="26,17,-16,0" Foreground="Gray" IsHitTestVisible="False"/>
        </Grid>

        <!-- Контейнер для даты начала абонемента -->
        <Grid Margin="10,60,10,10">
            <DatePicker Name="StartDatePicker" Width="200" Height="30" Margin="248,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock Text="Дата початку" VerticalAlignment="Top" Margin="26,10,-16,0" Foreground="Gray" IsHitTestVisible="False"/>
        </Grid>

        <!-- Контейнер для даты окончания абонемента -->
        <Grid Margin="10,110,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="32*"/>
            </Grid.ColumnDefinitions>
            <DatePicker Name="EndDatePicker" Width="200" Height="30" Margin="109,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
            <TextBlock Text="Дата закінчення" VerticalAlignment="Top" Margin="24,2,-14,0" Foreground="Gray" IsHitTestVisible="False" Grid.ColumnSpan="2"/>
        </Grid>

        <!-- Контейнер для скидки -->
        <Grid Margin="10,160,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="89*"/>
                <ColumnDefinition Width="691*"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="DiscountTextBox" Width="200" Height="30" Margin="159,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
            <TextBlock Text="Знижка (%)" VerticalAlignment="Top" Margin="28,12,-18,0" Foreground="Gray" IsHitTestVisible="False" Grid.ColumnSpan="2"/>
        </Grid>

        <!-- Кнопка для сохранения абонемента -->
        <Button Content="Зберегти абонемент" Width="120" Height="30" Margin="302,222,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SaveMembership_Click"/>
    </Grid>
</Window>
